<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<StackPane maxHeight="500" maxWidth="400" style="-fx-background-color: white" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tictactoe.BoardController">

    <Line fx:id="winningLine" fill="black" stroke="black" strokeWidth="4" />

    <StackPane maxHeight="100" maxWidth="300" translateY="-200">
        <Label fx:id="gameLabel" alignment="CENTER" minHeight="400" minWidth="300" text="Tic-Tac-Toe" translateY="-24">
            <font>
                <Font name="Times New Roman bold" size="24" />
            </font>
        </Label>
        <Button fx:id="startButton" minHeight="30" minWidth="135" onAction="#startingGame" text="Start New Game" translateY="15" />
        <Button text="Main Menu " onAction="#switchMenuScene" translateY="-30" translateX="150"/>
        <Button text="Reset Board" onAction="#resetBoard" translateY="0" translateX="150"/>
        <Button text="Reset Score" onAction="#resetScore" translateY="30" translateX="150"/>
    </StackPane>

    <StackPane fx:id="tile1" onMouseClicked="#playerAction">
        <children>
            <Rectangle height="100" stroke="black" width="100" />
            <Label fx:id="box1" alignment="CENTER" text="">
                <font>
                    <Font name="Arial Black" size="72" />
                </font>
            </Label>
        </children>
    </StackPane>

